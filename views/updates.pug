doctype html
html
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    title= title
    link(rel="stylesheet" href="/css/style.css")
  body
    .container
      h1 Add a Pet

      a(href="/") Return to the homepage

      if errorMessage
        .error
          p= errorMessage

      form(method="POST" action="/update-cobj")
        label(for="name") Name (required)
        input#name(type="text" name="name" required value=(formValues && formValues.name ? formValues.name : ""))

        label(for="bio") Bio
        textarea#bio(name="bio" rows="4")= (formValues && formValues.bio ? formValues.bio : "")

        label(for="species") Species
        input#species(type="text" name="species" value=(formValues && formValues.species ? formValues.species : ""))

        button(type="submit") Create record

